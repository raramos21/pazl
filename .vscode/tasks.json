{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "C:/mingw/mingw64/bin/g++.exe",
            "args": [
                "-g",
                "${file}",
                "${fileDirname}/../src/Core/game.cpp",
                "${fileDirname}/../src/Core/factories.cpp",
                "${fileDirname}/../src/Core/load.cpp",
                "${fileDirname}/../src/Core/render.cpp",
                "-o",
                // "${fileDirname}/../bin/${fileBasenameNoExtension}.exe",
                "${fileDirname}/../bin/pazl.exe",
                "-IC:/GameDev/_entt-master/entt-master/src",
                "-IC:/GameDev/_SDL2/include",
                "-IC:/GameDev/_mingw_dev_lib/x86_64-w64-mingw32/include/SDL2",
                "-IC:/GameDev/_SDL2_ttf-2.0.15/x86_64-w64-mingw32/include/SDL2",
                "-LC:/GameDev/_SDL2/lib/x64",
                "-LC:/GameDev/_mingw_dev_lib/x86_64-w64-mingw32/lib",
                "-LC:/GameDev/_SDL2_ttf-2.0.15/x86_64-w64-mingw32/lib",
                // "-lglu32",
                // "-lmingw32",
                // "-lopengl32",
                // "-lfreeglut",
                // "-lkernel32"
                // "-lgdi32"
                // "-v"
                // "-lx86_64-w64-mingw32-g++",
                // "--machine-windows"
                // "-lglew32",
                // "-lglew32mx",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-std=c++17",
                // "-Weffc++",
                // "-fsanitize=address -g"
            ],
            "options": {
                "cwd": "${fileDirname}/../bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}